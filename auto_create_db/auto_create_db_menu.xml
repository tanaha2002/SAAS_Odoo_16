<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="auto_create_db_menu" name="Auto Create DB Menu">
            
            <div class="oe_structure oe_empty">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <form action="/auto_create_db/create_database" method="post">
                            <label for="db_name">db name</label>
                            <input type="text" id="db_name" name="db_name"/>
                            <label for="admin_password">admin_password</label>
                            <input type="text" id="admin_password" name="admin_password"/>
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <button type="submit" class="btn btn-primary">Create Database</button>
                        </form>
                    </div>
                </div>
            </div>
            
        </template>
    </data>
</odoo>
