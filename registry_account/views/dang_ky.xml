            else{
                var i = 0;
                while (i !== fieldsToCheck.length) {
                    var fieldId = fieldsToCheck[i];
                    var inputValue = $("#" + fieldId).text().trim();
                    
                    if (inputValue !== "") {
                        event.preventDefault();
                        return;
                    }
                    i++;
                }
